{% extends 'base.html.twig' %}

{% block title %}Formation index{% endblock %}

{% block body %}
<a class="large btn btn-outline-dark" href="{{ path('formation_new') }}">Ajouter une nouvelle formation</a>
<table class="table table-sm table-hover">
    <div class="table-responsive">
{% for formation in formations %}


        <table class="table align-middle" style="background-color: {{ formation.couleurFormation }};">
            <tr>
                <td>{{ formation.intituleFormation }}</th>
                <td>{{ formation.type.nomType}}</th>
                <td><a class="btn btn-outline-dark" href="{{ path('formation_edit', {'id': formation.id}) }}"><i
                            class="bi bi-brush"></i></a></th>
            </tr>

            <tr>
                <td>Nombre de stagiaires : {{ formation.nbStagiaires }}</td>
                <td>Du {{ formation.debutFormation ? formation.debutFormation|date('d/m/y') : '' }} au {{
                    formation.finFormation ? formation.finFormation|date('d/m/y') : '' }}</td>
                <td>{{ include('formation/_delete_form.html.twig') }}</td>
            </tr>

        </table>
        {% endfor %}
    </div>
</table>



{% endblock %}