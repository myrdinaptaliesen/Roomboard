{% extends 'base.html.twig' %}

{% block title %}Centre index{% endblock %}

{% block body %}
    <h1>Centre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomCentre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for centre in centres %}
            <tr>
                <td>{{ centre.id }}</td>
                <td>{{ centre.nomCentre }}</td>
                <td>
                    <a href="{{ path('centre_show', {'id': centre.id}) }}">show</a>
                    <a href="{{ path('centre_edit', {'id': centre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('centre_new') }}">Create new</a>
{% endblock %}
